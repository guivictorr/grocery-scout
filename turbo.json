{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL", "NODE_ENV", "POSTGRES_DATABASE"],
  "tasks": {
    "lint:eslint:check": {
      "dependsOn": ["^lint:eslint:check"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
